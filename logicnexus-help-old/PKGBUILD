# Maintainer: Aenosh Rajora <aenoshrajora79@gmail.com>

pkgname=logicnexus-help
pkgver=2.0
pkgrel=3
pkgdesc="Help and Tips for logicnexus"
arch=('any')
url="https://github.com/logicnexus-os/lnos-packages"
license=('GPL3')
depends=('yad')
conflicts=('logicnexus-help-prime' 'logicnexus-help-wse')
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	(find help -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/logicnexus/{}" \;)
	install -Dm 755 logicnexus-help 			"$pkgdir"/usr/bin/logicnexus-help
	install -Dm 644 logicnexus-help.desktop	"$pkgdir"/usr/share/applications/logicnexus-help.desktop
}
