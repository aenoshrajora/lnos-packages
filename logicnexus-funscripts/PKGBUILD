# Maintainer: Aenosh Rajora <aenoshrajora79@gmail.com>

pkgname=logicnexus-funscripts
pkgver=1.0
pkgrel=1
pkgdesc="Fun Scripts for logicnexus"
arch=('any')
url="https://github.com/logicnexus-os/lnos-packages"
license=('GPL3')
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	(find scripts -type f -exec install -Dm 755 "{}" "$pkgdir/usr/share/logicnexus/{}" \;)
}
