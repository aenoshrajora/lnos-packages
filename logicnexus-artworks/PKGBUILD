# Maintainer: Aenosh Rajora <aenoshrajora79@gmail.com>

pkgname=logicnexus-artworks
pkgver=1.0
pkgrel=5
pkgdesc="Artworks (ascii, logos, icons) for logicnexus"
arch=('any')
url="https://github.com/logicnexus-os/lnos-packages"
license=('GPL3')
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	(find * -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/logicnexus/artworks/{}" \;)
}
